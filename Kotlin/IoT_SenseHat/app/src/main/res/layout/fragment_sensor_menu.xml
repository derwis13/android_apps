        android:layout_marginStart="50px"
        android:layout_marginEnd="50px"
        app:layout_constraintBottom_toBottomOf="@+id/humidityCase"
        tools:ignore="MissingConstraints" />
    <LinearLayout
        android:id="@+id/outputMenagerCase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="50px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/humidityCase"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/outputMenagerTextView"
            android:text="@string/outputMenagerText"
            style="@style/sensorNameViewStyle" />

        <TextView
            android:id="@+id/outputMenagerDescrView"
            android:text="@string/outputMenagerDescrText"
            style="@style/sensorDescrViewStyle"/>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginStart="50px"
        android:layout_marginEnd="50px"
        app:layout_constraintBottom_toBottomOf="@+id/humidityCase"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>