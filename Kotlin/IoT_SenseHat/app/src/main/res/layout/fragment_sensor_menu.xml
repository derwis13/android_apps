<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            tools:ignore="MissingConstraints"-->
<!--            tools:itemCount="@integer/sensorCount_Sensor_1" />-->
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginStart="50px"
        android:layout_marginEnd="50px"
        app:layout_constraintBottom_toBottomOf="@+id/temperatureCase"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/pressureCase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="50px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temperatureCase"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/pressureTextView"
            android:text="@string/pressureText"
            style="@style/sensorNameViewStyle" />

        <TextView
            android:id="@+id/pressureDescrView"
            android:text="@string/pressureDescrText"
            style="@style/sensorDescrViewStyle"/>

        <TextView
            android:id="@+id/pressureMeasurement"
            android:text="pressure: no Data!"
            style="@style/sensorDescrViewStyle"
            android:textColor="@color/purple_500"/>

<!--        <androidx.recyclerview.widget.RecyclerView-->
