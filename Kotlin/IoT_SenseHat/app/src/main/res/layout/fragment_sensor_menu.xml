<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.iot_sensehat.SensorMenuFragment">


    <TextView
        android:id="@+id/layoutOverlay"
        android:text="@string/layout_name"
        app:layout_constraintBottom_toTopOf="@+id/temperatureCase"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        style="@style/layoutNameStyle" />

    <LinearLayout
        android:id="@+id/temperatureCase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="50px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutOverlay"

        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/temperatureTextView"
            style="@style/sensorNameViewStyle"
            android:text="@string/temperatureText" />

        <TextView
            android:id="@+id/temperatureDescrView"
            android:text="@string/temperatureDescrText"
            style="@style/sensorDescrViewStyle" />

        <TextView
            android:id="@+id/temperatureMeasurement"
            android:text="temperature: no Data!"
            style="@style/sensorDescrViewStyle"
            android:textColor="@color/purple_500"/>

